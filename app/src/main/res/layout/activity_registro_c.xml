<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de conductor "
        android:layout_gravity="center"
        android:textSize="25dp"
        />
    <EditText
        android:id="@+id/EditT_nomC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditT_usuC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditT_passC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditText_ageC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Nacimiento "
        android:inputType="number"
        />
    <EditText
        android:id="@+id/EditT_bancaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="N# Bancaria "
        android:inputType="number"
        />
    <EditText
        android:id="@+id/EditT_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Placa del vehiculo "
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditT_soat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="N# SOAT "
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditT_marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca del Vehiculo"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/EditT_modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo "
        android:inputType="text"
        />
    <Button
        android:id="@+id/Btn_registroC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:layout_gravity="center"
        />




</LinearLayout>